<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <!--    begron-->

    <!--logo stylo di atas-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backround_login_register" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/miama"
        android:text="Stylo"
        android:textColor="@color/white"
        android:textSize="55sp" />

<!--tulisan sign in di atas field-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:layout_marginTop="230dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/cormorantunicase_medium"
        android:textSize="50sp"
        android:textColor="@color/white"
        />

    <!--    text field email-->
    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:layout_width="350dp"
        android:layout_height="38dp"
        android:scaleType="centerInside"
        android:background="@drawable/text_field"
        android:layout_marginTop="290dp"
        android:layout_centerHorizontal="true"
        android:hint="  Email"
        android:textColorHint="@color/black"
        android:id="@+id/emailField"
        />

<!--    text field password-->
    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:layout_width="350dp"
        android:layout_height="38dp"
        android:scaleType="centerInside"
        android:background="@drawable/text_field"
        android:layout_marginTop="340dp"
        android:layout_centerHorizontal="true"
        android:hint="  Password"
        android:textColorHint="@color/black"
        android:id="@+id/passField"
        />

<!--    forgot password text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/cormorantunicase_medium"
        android:text="Forgot password?"
        android:textColor="@color/white"
        android:layout_marginTop="380dp"
        android:layout_marginStart="270dp"
        />

<!--    checkbox remember me-->
    <CheckBox
        android:id="@+id/checkBoxRememberMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="7dp"
        android:buttonTint="@color/white"
        android:layout_marginTop="410dp"
        android:layout_marginStart="35dp"
        />


    <!--    remember me text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp"
        android:layout_marginStart="70dp"
        android:text="Remember Me"
        android:textSize="20sp"
        android:fontFamily="@font/cormorantunicase_medium"
        android:textColor="@color/white"/>


    <!--    login button-->
    <Button
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:background="@drawable/login_button"
        android:layout_marginTop="460dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cormorantunicase_medium"
        android:text="Log In"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

    <!--tulisan OR di antara tombol logins-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_marginTop="510dp"
android:layout_centerHorizontal="true"
        android:fontFamily="@font/cormorantunicase_medium"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

<!--google login-->
    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"
        android:alpha="0.6"
        android:background="@drawable/round_corners_style"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/cormorantunicase_medium"
        android:text="sign in with google"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/google_logo_1"

        >
    </Button>

</RelativeLayout>